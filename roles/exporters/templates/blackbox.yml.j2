modules:
  icmp:
    prober: icmp
    timeout: {{ blackbox_icmp_timeout | default('5s') }}
    icmp:
      preferred_ip_protocol: "ip4" # defaults to "ip6"

  http_2xx:
    prober: http
    timeout: {{ blackbox_http_timeout | default('5s') }}
    http:
      valid_http_versions: ["HTTP/1.1", "HTTP/2.0"]
      valid_status_codes: {{ blackbox_http_valid_status_codes | default([200, 201, 202, 204]) }}
      method: GET
      follow_redirects: true
      fail_if_ssl: false
      fail_if_not_ssl: false
      tls_config:
        insecure_skip_verify: false
      preferred_ip_protocol: "ip4" # defaults to "ip6"
      ip_protocol_fallback: true

  http_2xx_with_redirect:
    prober: http
    timeout: {{ blackbox_http_timeout | default('5s') }}
    http:
      valid_http_versions: ["HTTP/1.1", "HTTP/2.0"]
      valid_status_codes: {{ blackbox_http_valid_status_codes | default([200, 201, 202, 204]) }}
      method: GET
      follow_redirects: true
      fail_if_ssl: false
      fail_if_not_ssl: false
      tls_config:
        insecure_skip_verify: false
      preferred_ip_protocol: "ip4"
      ip_protocol_fallback: true
