# Apache fail2ban jails
# Automatically configured by Ansible

[apache-auth]
enabled = true
port = http,https
logpath = /var/log/apache2/*error.log
maxretry = 3
bantime = 3600
findtime = 600

[apache-badbots]
enabled = true
port = http,https
logpath = /var/log/apache2/*access.log
maxretry = 2
bantime = 86400
findtime = 600

[apache-noscript]
enabled = true
port = http,https
logpath = /var/log/apache2/*access.log
maxretry = 6
bantime = 86400
findtime = 300

[apache-overflows]
enabled = true
port = http,https
logpath = /var/log/apache2/*error.log
